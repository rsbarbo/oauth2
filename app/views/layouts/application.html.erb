<!DOCTYPE html>
<html>
  <head>
    <title>Oauth2</title>

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
  <nav class="navbar navbar-inverse">
    <div class="container">
      <% if current_user %>
        <ul class="nav navbar-nav pull-right">
          <li><%= link_to 'Log Out', logout_path, method: :delete %></li>
        </ul>
      <% else %>
        <div class="jumbotron">
          <h1>Welcome to OAuth2 authenticating with social networks</h1>
            <p class="text-center">Please select a social network to get started</p>
            <p><a class="btn btn-primary btn-lg" href='/auth/twitter' role="button">Twitter</a></p>
        </div>
       <% end %>
     </div>
   </nav>

  <div class="container">
    <% flash.each do |key, value| %>
     <div class="alert alert-<%= key %>">
        <%= value %>
     </div>
      <% end %>
    <%= yield %>
  </body>
</html>
